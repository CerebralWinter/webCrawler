  <ItemGroup>
    <Reference Include="Var-WebCrawler-CRUD">
      <HintPath>..\Var-WebCrawler-CRUD-Library\bin\Release\net7.0\Var-WebCrawler-CRUD.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
